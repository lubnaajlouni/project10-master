    <script src="/ashion-master/js/jquery.nicescroll.min.js"></script>
    <script src="/ashion-master/js/main.js"></script>
    <script>
        $(function () {
            $('.icon_close').click(function () {
                var row = $(this).closest('tr');
                var itemId = row.attr('id');
                $.ajax({
                    url: '/cart/remove',
                    method: 'POST',
                    data: { itemId: itemId },
                    success: function (response) {
                        row.remove();
                    },
                    error: function (xhr, status, error) {
                        alert('Failed to remove item from cart: ' + error);
                    }
                });
            });
        });
    </script>
    <script>
        var quantityInput = document.getElementById("quantity-input");
        quantityInput.addEventListener("change", function () {
            var newQuantity = parseInt(quantityInput.value);
            if (newQuantity >= 1) {
                window.location.href = "/Shopcart?quantity=" + newQuantity;
            }
        });
    </script>
